<div class="form-group" >
    <label for="title">Title</label>
    <input value="<%= article.title %>" required class="form-control" type="text" name='title' id='title'>
    <label for="description">Description</label>
    <textarea required class="form-control" type="text" name='description' id='description'><%= article.description %></textarea>
    <label for="markdown" >Markdown</label>
    <textarea required class="form-control" id="markdown" name="markdown" ><%= article.markdown %></textarea>
</div>
<a class="btn btn-secondary" href="/">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
